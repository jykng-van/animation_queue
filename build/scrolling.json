{
    "name":"Scroll Sections",
    "start":[
        {
            "selector":"#sub-text, #boxes",
            "style":"opacity:0"
        },
        {
            "selector":"#sub-text",
            "style":"height:100vh; background:#121212; border:1px solid #bebebe; display:flex; justify-content:center; align-items:center; font-size:8rem;"
        },
        {
            "selector":"#shapes, #face",
            "style":"display:block; height:100vh; width:100%; object-fit:contain; object-position:center; clip-path:circle(0%)"
        },
        {
            "selector":"#more-text",
            "style":"transform:scale(0); transform-center:0 0; font-size:3rem"
        }

    ],
    "animations":[
        {
            "trigger":"#sub-text",
            "threshold":0,
            "steps":[
                {
                    "duration":".5s",
                    "elements":[
                        {
                            "selector":"#sub-text",
                            "style":"opacity:1"
                        }
                    ]
                }
            ]
        },
        {
            "trigger":"#shapes",
            "threshold":0.25,
            "steps":[
                {
                    "duration":"1s",
                    "elements":[
                        {
                            "selector":"#shapes",
                            "style":"clip-path:circle(100%)"
                        }
                    ]
                }
            ]
        },
        {
            "trigger":"#face",
            "threshold":0.5,
            "steps":[
                {
                    "duration":"1s",
                    "elements":[
                        {
                            "selector":"#face",
                            "style":"clip-path:circle(100%)"
                        }
                    ]
                }
            ]
        },
        {
            "trigger":"#more-text",
            "threshold":0.75,
            "steps":[
                {
                    "duration":".6s",
                    "elements":[
                        {
                            "selector":"#more-text",
                            "style":"scale:1"
                        }
                    ]
                },
                {
                    "duration":".6s",
                    "elements":[
                        {
                            "selector":"#boxes",
                            "style":"opacity:1"
                        }
                    ]
                }
            ]
        }
    ]
}