{
    "name":"Pie/Clock Reveal",
    "start":[
        {
            "selector":"#face",
            "style":"pie:90 90"
        },
        {
            "selector":"#rect",
            "style":"fill:cyan"
        },
        {
            "selector":"#circ",
            "style":"fill:magenta"
        },
        {
            "selector":"#triangle",
            "style":"fill:yellow"
        },
        {
            "selector":"#rect, #circ, #triangle",
            "style":"pie:45 45"
        },
        {
            "selector":"#boxes",
            "style":"display:none"
        }
    ],
    "animations":[
        {
            "steps":[
                {
                    "duration":"1s",
                    "elements":[
                        {
                            "substeps":3,
                            "selector":"#rect, #circ, #triangle",
                            "style":"pie:45 405"
                        }
                    ]
                },
                {
                    "duration":".5s",
                    "elements":[
                        {
                            "selector":"#face",
                            "style":"pie:90 450"
                        }
                    ]
                }
            ]
        }
    ]
}